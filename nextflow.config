docker {
    enabled = true
}

report {
    enabled = true
    file = 'reports/report.html'
}

trace {
    enabled = true
    file = 'reports/trace.txt'
}

process {
    withName: downloadFastQ{
        container="pegi3s/sratoolkit"
        cpus=8
    }
    withName: indexGenome{
        container="evolbioinfo/star:v2.7.6a"
        cpus=16
    }
    withName: mapFastQ{
      container ="evolbioinfo/star:v2.7.6a"
      cpus = 16
      memory = 50.GB
    }
}
